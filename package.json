{
  "name": "@monkr/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build:cli": "nx build monkr  --configuration=production",
    "serve:cli": "nx serve monkr --configuration=development",
    "pack:cli": "node scripts/package-cli.js"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/esbuild": "21.3.11",
    "@nx/eslint": "21.3.11",
    "@nx/eslint-plugin": "21.3.11",
    "@nx/js": "21.4.0",
    "@nx/node": "21.4.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/figlet": "^1.7.0",
    "@types/node": "~18.16.9",
    "archiver": "^7.0.1",
    "esbuild": "^0.19.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.3.11",
    "prettier": "^2.6.2",
    "tslib": "^2.3.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.29.0",
    "verdaccio": "^6.0.5"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "core",
    "libs/core",
    "apps/cli/libs/my-new-lib",
    "libs/my-new-lib"
  ],
  "dependencies": {
    "monkr": "workspace:*"
  },
  "nx": {
    "includedScripts": [],
    "targets": {
      "local-registry": {
        "executor": "@nx/js:verdaccio",
        "options": {
          "port": 4873,
          "config": ".verdaccio/config.yml",
          "storage": "tmp/local-registry/storage"
        }
      }
    }
  }
}
